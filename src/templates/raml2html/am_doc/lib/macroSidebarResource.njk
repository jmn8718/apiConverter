{% macro resourceSidebar(resource) %}
    {% if resource.displayName %}
        {% set displayName = resource.displayName %}
    {% elif resource.parentUrl %}
        {% set displayName = resource.parentUrl %}
    {% else %}
        {% set displayName = resource.uniqueId %}
    {% endif %}

<li class="nav__list__item">
    <a class="nav__list__link" href="#resource-{{resource.uniqueId}}" title={{displayName}}">{{displayName}}</a>
    <!--<span class="api_market__tooltip nav__list__link__tooltip">{{displayName}}</span>-->
    {% if resource.methods %}
        <ul class="nav__list nav__list--sub-list">
        {% for method in resource.methods %}
            <li class="nav__list__item">
                <span class="nav__list__icon">
                    <strong class="api__documentation__http api__documentation__http--{{ method.method | lower }}">
                    {% if (method.method | lower) == 'delete'%}
                        del
                    {% else %}
                        {{ method.method | lower }}
                    {% endif %}
                    </strong>
                </span>
                <a class="nav__list__link nav__list__link-method" href="#method-{{method.uniqueId}}-{{ method.method | lower}}" title="{{ resource.parentUrl }}{{ resource.relativeUri }}">{{ resource.parentUrl }}{{ resource.relativeUri }}</a>
                <!--<span class="api_market__tooltip nav__list__link__tooltip">{{ resource.parentUrl }}{{ resource.relativeUri }}</span>-->
            </li>
        {% endfor%}
        </ul>
    {% endif %}
</li>
{% for subresource in resource.resources %}
  {{macroSidebar.resourceSidebar(subresource)}}
{% endfor %}
{% endmacro %}